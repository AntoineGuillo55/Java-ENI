package tp_tri;

public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int[] tab = {5, 9, 4 ,7 ,3 ,1 ,6 ,5 ,41 ,56 ,12 ,37}; 
		System.out.println("Tabelau en entrÃ©e : " + tab);
		System.out.println("Tableau en sortie : " + triCroissantTableau(tab).toString());
	};

	public static int[] triCroissantTableau(int[] tab) {
		
		int[] tableau = tab; 
		for(int index1 = 0; index1 < tableau.length; index1++) {
			
			for(int index2 = index1++ ; index2< tableau.length; index2++) {
				
				if(tableau[index1] > tableau[index2]) {
					int tmp = tableau[index1];
					tableau[index1] = tableau[index2];
					tableau[index2] = tmp;
				}
			}
		}
		return tableau;
	}
}
